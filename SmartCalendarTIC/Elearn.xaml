<Page x:Class="SmartCalendarTIC.Elearn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SmartCalendarTIC"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="1900"
      Title="Elearn" >

    <StackPanel>
        
        <StackPanel>
            <Button x:Name="GetLink" Height="50" Width="100" Margin="10,0,10,0" Click="GetLink_Click" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" >Получить данные</Button>
            <Grid x:Name="GridCursorMenu" Width="100" Height="5" Background="#FF2196F3" HorizontalAlignment="Left" Margin="900, 0, 0, 0"/>

            <ProgressBar Height="30" Width="600" Margin="10,10,10,10" x:Name="PBar"></ProgressBar>


        </StackPanel>
        <WebBrowser x:Name="WBElearn" Source="https://elearn.csn.khai.edu/xsl-portal" HorizontalAlignment="Left" VerticalAlignment="Top"></WebBrowser>
    </StackPanel>
</Page>
