<UserControl x:Class="SmartCalendarTIC.MonthItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartCalendarTIC"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="{Binding BorderColor}" BorderThickness="{Binding BorderWidth}" Margin="1">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <StackPanel Background="{Binding BacgroundColor}" x:Name="Main">
                <Label Content="{Binding DayOfMonth}" FontSize="12"/>
            </StackPanel>
        </ScrollViewer>
        
    </Border>
</UserControl>
